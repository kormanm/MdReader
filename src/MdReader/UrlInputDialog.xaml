<Window x:Class="MdReader.UrlInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Open URL" Height="150" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Enter Markdown file URL:" Margin="0,0,0,10"/>
        <TextBox Grid.Row="1" Name="UrlTextBox" Margin="0,0,0,10" KeyDown="UrlTextBox_KeyDown"/>
        <TextBlock Grid.Row="2" Text="Example: https://raw.githubusercontent.com/user/repo/main/README.md" 
                   FontSize="10" Foreground="Gray" Margin="0,0,0,10"/>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="OkButton" Content="OK" Width="75" Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True"/>
            <Button Name="CancelButton" Content="Cancel" Width="75" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
